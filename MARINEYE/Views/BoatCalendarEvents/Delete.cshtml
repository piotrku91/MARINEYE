@model MARINEYE.Models.BoatCalendarEvent

@{
    ViewData["Title"] = "Usuń";
}

<h1>Delete</h1>

<h3>Czy napewno chcesz usunąć?</h3>
<div>
    <h4>Rezerwacje / Wypożyczenia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BeginDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeginDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Boat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Boat.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
